{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",                     // ⬅️ ganti dari "./src" ke "."
    "paths": { "@/*": ["src/*"] }       // ⬅️ map @/* ke src/*
  },
  "include": ["src"]
}
